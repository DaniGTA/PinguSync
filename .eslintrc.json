{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "@vue/typescript",
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint/eslint-plugin"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn"
        ],
        "no-mixed-spaces-and-tabs": [
            "off"
        ]
    }
}