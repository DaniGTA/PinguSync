{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es6",
            "es5",
            "dom.iterable",
            "esnext.array"
        ],
        "rootDirs": [
            "src"
        ]
    },
    "include": [
        "../src/**/*",
        "./**/*"
    ],
    "compileOnSave": false
}
